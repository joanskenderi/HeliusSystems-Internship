@using ProjektInternship2022.MVC.Models
@{
    ViewBag.Title = "Home Page";
}

<script src="~/Scripts/Home/Home.js"></script>
<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="row">
            <div class="text-center">
                <h2>Kendo UI Grid</h2>
                @(Html.Kendo().Grid<Status>()
                .Name("StatusGrid")
                .Columns(columns =>
                {
                    columns.Bound(c => c.StatusId).Width(100);
                    columns.Bound(c => c.StatusName).Width(300);
                    columns.Bound(c => c.IsActive).Width(100).ClientTemplate("# if(IsActive){# <span class='glyphicon glyphicon-ok'></span> #} else{# <span class='glyphicon glyphicon-remove'></span> #} #   #= IsActive # ");
                })
                .Selectable(selectable => selectable.Mode(GridSelectionMode.Multiple))
                .Scrollable(scr => scr.Enabled(true).Height("auto"))
                .DataSource(dataSource => dataSource
                    .Ajax()
                    .Read(read => read.Action("GetStatus", "Home"))
                )
            )
            </div>
        </div>
</div>
